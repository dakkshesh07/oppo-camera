<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/professional_background" />
            <corners android:radius="@dimen/professional_mode_background_corner" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_item_selected_color" />
            <corners android:radius="@dimen/professional_mode_background_corner" />
        </shape>
    </item>
</selector>